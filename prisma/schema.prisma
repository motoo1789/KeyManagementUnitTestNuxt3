generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model checkout {
  id        Int     @id @default(autoincrement())
  checkout_user   user @relation(fields: [user], references: [id]) // references `id` of `Profile`
  user String     @unique // relation scalar field (used in the `@relation` attribute above)
  checkout_approve approve @relation(fields: [approve], references: [id]) // references `id` of `Profile`
  approve  Int @unique
  key Int
  checkout_date DateTime @default(now())
  return_date DateTime @default(now())
  
}

model user {
  id      String      @id @unique
  name String
  authorizer String
  create_date DateTime
  mail  String
  checkout checkout?
}

model approve{
  id      Int      @id @unique @default(autoincrement())
  user String
  status Boolean @default(false)
  date DateTime 
  checkout checkout?
}